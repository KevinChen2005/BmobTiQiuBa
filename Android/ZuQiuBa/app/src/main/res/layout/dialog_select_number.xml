<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:su="http://schemas.android.com/apk/res-auto"
android:layout_width="match_parent"
android:layout_height="match_parent"
android:background="#FFFFFF"
android:padding="16dp"
    >
<TextView
    android:id="@+id/picker_title"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content"
    android:text="选择分数"
    android:textSize="16sp"
    android:textColor="@color/forget_pwd_tips"
    />
<View
    android:id="@+id/picker_diviver"
    android:layout_width="match_parent"
    android:layout_height="1px"
    android:layout_below="@id/picker_title"
    android:layout_marginTop="8dp"
    android:background="@color/forget_pwd_tips"
    />
<!--<cn.bmob.zuqiu.view.views.NumberPicker
    android:id="@+id/date_number"
    android:layout_width="match_parent"
    android:layout_height="50dp"
    android:layout_below="@id/picker_diviver"
    android:layout_marginTop="16dp"
    android:layout_centerHorizontal="true"
    android:layout_marginLeft="15dp"
    android:layout_marginRight="15dp" />-->
    <cn.bmob.zuqiu.view.views.ScrollerNumberPicker
        android:id="@+id/date_number"
        android:layout_width="match_parent"
        android:layout_height="50dp"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="1dp"
        android:layout_marginRight="1dp"
        android:layout_below="@id/picker_diviver"
        su:itemNumber="3"
        su:lineColor="#ffff6000"
        su:maskHight="32dp"
        su:noEmpty="true"
        su:normalTextColor="#777"
        su:normalTextSize="14sp"
        su:selecredTextColor="#ff000000"
        su:selecredTextSize="22sp"
        su:unitHight="50dp" />
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="horizontal"
        android:layout_below="@id/date_number"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp"
        android:layout_marginRight="16dp">
        <Button
            android:id="@+id/date_commit"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:layout_weight="1"
            android:layout_marginRight="5dp"
            android:background="@drawable/btn_yellow"
            android:text="确定"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
        <Button
            android:id="@+id/btn_cancel"
            android:layout_width="0dp"
            android:layout_height="wrap_content"
            android:background="@drawable/btn_black"
            android:layout_marginLeft="5dp"
            android:layout_weight="1"
            android:text="取消"
            android:padding="8dp"
            android:textColor="#FFFFFF"
            android:textSize="16sp"
            />
    </LinearLayout>

</RelativeLayout>