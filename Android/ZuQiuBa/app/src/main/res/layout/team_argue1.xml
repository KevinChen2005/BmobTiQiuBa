<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:orientation="horizontal"
    android:background="#ffffff"
     >

	<LinearLayout 
        android:id="@+id/team_competitions"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RelativeLayout 
            android:id="@+id/team_draw_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/valid_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="6"
                style="@style/text_75_f17600"
                />
            <TextView 
                android:id="@+id/total_draw"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/valid_draw"
                android:layout_alignBottom="@id/valid_draw"
                android:gravity="bottom"
                android:text="12"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
            <TextView 
                android:id="@+id/draw_tips"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_draw"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="进球"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
        </RelativeLayout>
    </LinearLayout>
    
	<LinearLayout 
        android:id="@+id/team_loss"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RelativeLayout 
            android:id="@+id/team_loss_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/valid_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="6"
                style="@style/text_75_f17600"
                />
            <TextView 
                android:id="@+id/total_loss"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/valid_loss"
                android:layout_alignBottom="@id/valid_loss"
                android:gravity="bottom"
                android:text="12"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/total_loss"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="失球"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
        </RelativeLayout>
    </LinearLayout>
    
	<LinearLayout 
        android:id="@+id/team_difference"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:padding="16dp"
        android:layout_weight="1"
        android:orientation="horizontal"
        android:gravity="center"
        >
        <RelativeLayout 
            android:id="@+id/team_difference_content"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:gravity="center"
            >
            <TextView 
                android:id="@+id/valid_difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:gravity="bottom"
                android:text="6"
                style="@style/text_75_f17600"
                />
            <TextView 
                android:id="@+id/total_difference"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_toRightOf="@id/valid_difference"
                android:layout_alignBottom="@id/valid_difference"
                android:gravity="bottom"
                android:text="12"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
            <TextView 
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_below="@id/valid_difference"
                android:layout_centerHorizontal="true"
                android:layout_marginTop="4dp"
                android:text="净胜球"
                android:layout_marginBottom="4dp"
                style="@style/text_30_848587"
                />
        </RelativeLayout>
    </LinearLayout>
</LinearLayout>