<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" 
    android:background="#FFFFFF"
    android:descendantFocusability="blocksDescendants"
    >
    <TextView
        android:id="@+id/time_year"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:textSize="16sp"
        android:textColor="#000000"
        android:padding="8dp"
        android:text="2014年"
        android:background="@color/bg_dan_hui"
        android:visibility="visible"
        />
    <RelativeLayout 
        android:id="@+id/left_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_year"
        android:padding="16dp"
        >
        <TextView 
            android:id="@+id/near_com_date"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_36_272f38"
            android:text="3月29"
            />
        <TextView 
            android:id="@+id/near_com_time"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/near_com_date"
            android:layout_alignRight="@id/near_com_date"
            style="@style/text_26_848587"
            android:text="18:00"
            android:gravity="right"
            />
        <TextView 
            android:id="@+id/tournament_nature"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/near_com_time"
            android:layout_alignRight="@id/near_com_time"
            style="@style/text_26_848587"
            android:text="小组赛"
            android:gravity="right"
            />
    </RelativeLayout>
	<RelativeLayout 
        android:id="@+id/right_info"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/time_year"
        android:layout_toRightOf="@id/left_info"
        android:padding="16dp"
        >
        <TextView 
            android:id="@+id/near_com_name"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            style="@style/text_26_848587"
            android:text="广州市足球联赛"
            />
         <TextView 
            android:id="@+id/near_com_teams"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@id/near_com_name"
            android:layout_marginTop="4dp"
            style="@style/text_36_272f38"
            android:text="老菜帮队"
            />
         <TextView 
	             android:id="@+id/vs_points"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_below="@id/near_com_name"
                 android:layout_toRightOf="@id/near_com_teams"
	             style="@style/text_60_272f38"
	             android:text="0-0"
	             android:layout_marginLeft="4dp"
	             />
	         <TextView 
	             android:id="@+id/opponent_team"
	             android:layout_width="wrap_content"
	             android:layout_height="wrap_content"
	             android:layout_below="@id/near_com_name"
            	 android:layout_marginTop="4dp"
	             android:layout_toRightOf="@id/vs_points"
	             style="@style/text_36_272f38"
	             android:text="小白菜队"
	             android:layout_marginLeft="4dp"
	             />
         <cn.bmob.zuqiu.view.views.MyGridView 
             android:id="@+id/team_lineup"
             android:layout_width="match_parent"
             android:layout_height="wrap_content"
             android:layout_marginTop="4dp"
             android:layout_below="@id/near_com_teams"
             android:numColumns="2"
             ></cn.bmob.zuqiu.view.views.MyGridView>
        </RelativeLayout>
        <ImageView 
		    android:id="@+id/rz"
		    android:layout_width="wrap_content"
		    android:layout_height="wrap_content"
		    android:scaleType="centerInside"
		    android:layout_alignParentRight="true"
		    android:layout_centerVertical="true"
		    android:src="@drawable/rz"
		    />
</RelativeLayout>