<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#FFFFFF"
    android:paddingBottom="16dp"
    android:descendantFocusability="blocksDescendants"
    >
    <TextView 
        android:id="@+id/msg_type"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#989b9f"
        android:text="消息"
        android:drawableLeft="@drawable/icon_msg_type_personal"
        android:drawablePadding="4dp"
        />
 	<TextView 
        android:id="@+id/msg_time"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_margin="8dp"
        style="@style/text_28_989b9f"
        android:text="2014.3.29"
        />
 	<View 
 	    android:id="@+id/msg_diviver"
 	    android:layout_width="match_parent"
 	    android:layout_below="@id/msg_type"
 	    android:layout_height="1px"
 	    android:background="#989b9f"
 	    />
 	<TextView 
        android:id="@+id/msg_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginTop="16dp"
        android:layout_marginBottom="8dp"
        android:layout_marginLeft="16dp"
        style="@style/text_36_272f38"
        android:text="消息标题"
        android:layout_below="@id/msg_diviver"
        />
 	<TextView 
        android:id="@+id/msg_desc"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginLeft="16dp"
        android:textSize="16sp"
        android:textColor="#989b9f"
        android:text="消息描述"
        android:layout_below="@id/msg_title"
        android:layout_marginRight="100dp"
        />
 	<Button
	    android:id="@+id/msg_operate"
	    android:layout_width="wrap_content"
	    android:layout_height="36dp"
	    android:layout_alignBottom="@id/msg_desc"
	    android:layout_alignParentRight="true"
	    android:layout_marginRight="8dp"
	    android:paddingLeft="24dp"
	    android:paddingRight="24dp"
	    android:text="同意"
	    android:textColor="@android:color/white"
	    android:textSize="16sp"
	    android:gravity="center"
	    android:background="@drawable/btn_yellow"
	    />
</RelativeLayout>